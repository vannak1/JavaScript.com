footer.row.footer.site-item(role='contentinfo')
  .cell.well.well--l.tac

    .footer-logo
      a.db.mbs(href='/')
        img(src='/images/logo-monochrome.svg' alt='JavaScript.com' width='86')

    ul.list.list--inline.list--inline--dotted.tsxs
      li.list-item.tci
        a.link.link--inverted(href='/about') About
      li.list-item.tci
        a.link.link--inverted(href='/guidelines') Community Guidelines

    p.footer-text
      | &copy; 2015 JavaScript.com; Crafted lovingly in Orlando, Florida. 

    ul.list.list--inline.mbm
      li.list-item
        a.link.link--inverted(href='https://twitter.com/javascriptcom')
          - iconPartial = { name: 'twitter', size: 24 }
          include /views/partials/_icon
      li.list-item
        a.link.link--inverted(href='/feed/rss')
          - iconPartial = { name: 'rss', size: 16 }
          include /views/partials/_icon

    p.footer-text.mtf.pts
      | Hosted by 
      a.link.link--inverted(href='https://www.digitalocean.com') DigitalOcean
