.bucket
  .bucket-media

    img.thumb(src=story.avatar_url width='50')

  .bucket-content

    h2.h.h--4
      a.externalLink.tct.twb(href=story.url target='_blank')
        = story.title
        +icon('external', 16).externalLink-icon

    .list.list--inline.list--inline--divided.list--inline--xs.list--inline--divided--xs.tss
      .list-item.tcs.
        via #[span.twsb= story.name]
      .list-item
        a(href=`/news/${story.slug}#comments`)
          +icon('comment-line', 14).mrxs
          | #{story.comment_count} Comments
