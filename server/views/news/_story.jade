.bucket
  .bucket-media

    img.thumb(src=story.avatar_url width=50)

  .bucket-content

    h2.h.h--4
      a.tct.tw7(href=`/news/${story.slug}`)
        = story.title

    .list.list--inline.list--inline--divided.list--inline--xs.list--inline--divided--xs.tss
      .list-item.tcs.
        via #[span.tw6= story.name]

      .list-item
        a(href=`/news/${story.slug}#comments`)
          +icon('comment-line', 14).mrxs
          if story.comment_count > 0
            | #{story.comment_count} Comments
          else
            | Comments

      .list-item
        a(href=story.url target='_blank')
          +icon('open', 14).mrxs
          | Site
