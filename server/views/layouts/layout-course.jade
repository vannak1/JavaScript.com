doctype html
html.courseLayout.js-courseLayout(lang='en')

  block layout_variables
  include /views/_globals/links
  include /views/_mixins/all

  include /views/layouts/_head

  - dispatcher = dispatcher ? dispatcher : ''
  body.mbf.js-dispatcher(data-dispatcher-page=dispatcher)

    header.header.courseLayout-header(role='banner')
      .row
        .cell.well.well--s.well--m--m
          .courseLayout-header-content
            .flexSplit

              .flexSplit-item
                a.db(href='/')
                  img.dn--m(src='/images/logo-mark.svg' alt='JavaScript.com' width='54')
                  img.dn.db--m(src='/images/logo.svg' alt='JavaScript.com' width='240')

              nav.flexSplit-item(role='navigation')
                a.underline.header-link(href='/news') News
                a.underline.header-link(href='/resources') Resources

      button.courseLayout-header-toggle.js-courseLayout-toggle Toggle Navigation

    main(role='main')
      block content

      section.row.tac.js-preload
        .well.well--l.well--m--xl.cell

          .preloader
            p.srt Loading Try JavaScript

            .preloader-progress
              .preloader-progress-item
              .preloader-progress-item
              .preloader-progress-item

            .preloader-img
              include /../public/images/logo-mark-dotless.svg

    script(src='/javascripts/vendor.js')
    script(src='/javascripts/vendor-course.js')
    script(src='/javascripts/course.js')
    script(src='/javascripts/application.js')

    script.
